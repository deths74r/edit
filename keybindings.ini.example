# edit keybindings configuration
#
# Copy this file to ~/.edit/keybindings.ini to customize keybindings.
# Lines starting with # or ; are comments.
#
# Format: action = key
#
# Key syntax:
#   Ctrl+X      - Control key combinations
#   Alt+X       - Alt key combinations
#   Shift+X     - Shift key combinations
#   Ctrl+Shift+X - Multiple modifiers
#   F1-F12      - Function keys
#   Up/Down/Left/Right - Arrow keys
#   Home/End/PageUp/PageDown/Delete/Backspace
#
# Examples:
#   save = Ctrl+S
#   find = Ctrl+F
#   move_line_up = Alt+Up

# Optional: start with a preset (default or macos)
# The macos preset adds Alt-key alternatives for common operations
# preset = default

[bindings]

# === File Operations ===
# quit = Ctrl+Q
# save = Ctrl+S
# save_as = Alt+Shift+S
# open = Ctrl+O
# new = Ctrl+N

# === Edit Operations ===
# undo = Ctrl+Z
# redo = Ctrl+Y
# cut = Ctrl+X
# copy = Ctrl+C
# paste = Ctrl+V
# delete_line = Alt+K
# duplicate_line = Alt+D

# === Cursor Movement ===
# move_up = Up
# move_down = Down
# move_left = Left
# move_right = Right
# move_word_left = Ctrl+Left
# move_word_right = Ctrl+Right
# move_line_start = Home
# move_line_end = End
# move_page_up = PageUp
# move_page_down = PageDown
# move_file_start = Ctrl+Home
# move_file_end = Ctrl+End
# go_to_line = Ctrl+G

# === Selection ===
# select_up = Shift+Up
# select_down = Shift+Down
# select_left = Shift+Left
# select_right = Shift+Right
# select_word_left = Ctrl+Shift+Left
# select_word_right = Ctrl+Shift+Right
# select_line_start = Shift+Home
# select_line_end = Shift+End
# select_page_up = Shift+PageUp
# select_page_down = Shift+PageDown
# select_all = Ctrl+A
# select_word = Alt+W
# add_cursor_next = Ctrl+D

# === Search ===
# find = Ctrl+F
# find_replace = Ctrl+R
# find_next = F3
# find_prev = Shift+F3

# === Line Operations ===
# move_line_up = Alt+Up
# move_line_down = Alt+Down
# toggle_comment = Alt+/
# jump_to_match = Alt+]

# === View Toggles ===
# toggle_line_numbers = Alt+L
# toggle_whitespace = Alt+Shift+W
# cycle_wrap_mode = Alt+Z
# cycle_wrap_indicator = Alt+Shift+Z
# cycle_color_column = Alt+Shift+C
# toggle_hybrid_mode = Alt+M

# === Dialogs ===
# help = F1
# theme_picker = Ctrl+T
# check_updates = Alt+U
